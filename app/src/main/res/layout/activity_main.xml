<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/simple_back"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/mainLayout"
        android:layout_width="210dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton1"
                android:background="@drawable/imagebtnxml"
                android:scaleType="centerCrop"
                android:layout_margin="3dp"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:background="@drawable/imagebtnxml"
                android:scaleType="centerCrop"
                android:layout_margin="3dp"/>

            <ImageButton
                android:id="@+id/imageButton3"
                android:background="@drawable/imagebtnxml"
                android:scaleType="centerCrop"
                android:layout_margin="3dp"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton4"
                android:background="@drawable/imagebtnxml"
                android:scaleType="centerCrop"
                android:layout_margin="3dp"/>

            <ImageButton
                android:id="@+id/imageButton5"
                android:background="@drawable/imagebtnxml"
                android:scaleType="centerCrop"
                android:layout_margin="3dp"/>

            <ImageButton
                android:id="@+id/imageButton6"
                android:background="@drawable/imagebtnxml"
                android:scaleType="centerCrop"
                android:layout_margin="3dp"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton7"
                android:background="@drawable/imagebtnxml"
                android:scaleType="centerCrop"
                android:layout_margin="3dp"/>

            <ImageButton
                android:id="@+id/imageButton8"
                android:background="@drawable/imagebtnxml"
                android:scaleType="centerCrop"
                android:layout_margin="3dp"/>

            <ImageButton
                android:id="@+id/imageButton9"
                android:background="@drawable/imagebtnxml"
                android:scaleType="centerCrop"
                android:layout_margin="3dp"/>
        </TableRow>

    </TableLayout>


    <FrameLayout
        android:id="@+id/popup_layout"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/popup"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="Молоко и печеньки :3"
            android:textSize="18dp"
            android:textColor="#8ecbe0" />

        <Button
            android:id="@+id/restart"
            android:backgroundTint="#D6091418"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Играть снова"
            android:textSize="18dp"
            android:textColor="#8ecbe0"
            app:cornerRadius="10dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/currentTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Текущий ход: Х"
        android:textSize="18dp"
        android:textColor="#D6091418"
        app:layout_constraintBottom_toTopOf="@+id/mainLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />


</androidx.constraintlayout.widget.ConstraintLayout>